@model List<SCBHarmonization.Models.ELMAH_Error>
@{
    ViewBag.Title = "GetErrorList";
}

<div class="container-fluid">
    <!-- Breadcrumbs-->

    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Error List</a>
        </li>
        <li class="breadcrumb-item active">ErrorList</li>

    </ol>
    <!-- DataTables Example -->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-table"></i>
            Error List
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead class="table-dark">
                        <tr>
                            <th>Sr. No.</th>
                            <th>Error Code</th>
                            <th>Error Description (Technical)</th>
                            <th>Error Description (User)</th>
                            <th>User</th>
                            <th>Encountered By</th>
                            <th>Date/Time</th>
                        </tr>
                    </thead>
                    @*<tfoot class="table-dark">
                        <tr>
                            <th>Sr. No.</th>
                            <th>Error Code</th>
                            <th>Error Description (Technical)</th>
                            <th>Error Description (User)</th>
                            <th>User</th>
                            <th>Encountered By</th>
                            <th>Date/Time</th>
                        </tr>
                    </tfoot>*@
                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr>
                                <td>@(Model.IndexOf(item) + 1)</td>
                                <td>@item.StatusCode</td>
                                <td>@item.Type</td>
                                <td>@item.Message</td>
                                <td>@item.Host</td>
                                <td>@item.User</td>
                                <td>@item.TimeUtc</td>



                            </tr>
                        }

                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>

