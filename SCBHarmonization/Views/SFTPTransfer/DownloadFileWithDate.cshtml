<script type="text/javascript">
    $(function () {
        $("#txtTransDate").datepicker(
            {
                //dateFormat: 'mm-dd-yy',
                dateFormat: 'dd-mm-yy',
                //dateFormat: 'yy-mm-dd',
                changeMonth: true,
                changeYear: true
            });
        $("#btnSave").click(function () {
            DownloadFile();
        });
    });

    function DownloadFile() {
        var obj = new Object();
        obj.DownloadDate = $("#txtTransDate").val();
        var data = JSON.stringify({
            obj: obj
        });
        return $.ajax({
            contentType: 'application/json; charset=utf-8',
            dataType: 'json',
            type: 'POST',
            url: "/SFTPTransfer/Download",
            data: data,
            success: function (result) {
                alert(result);
            },
            error: function () {
                alert("Error!")
            }
        });
    }
</script>

