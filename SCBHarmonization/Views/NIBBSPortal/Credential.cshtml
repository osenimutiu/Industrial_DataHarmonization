
@{
    ViewBag.Title = "Credential";
}

<h2>Credential</h2>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {

    });


  

    function SaveCredentials() {
        var att = new Object();
        att.ClientId = $("#txtClientId").val();
        att.ClientSecret = $("#txtClientSecret").val();
        var data = JSON.stringify({
            cred: att
        });
        return $.ajax({
            contentType: 'application/json; charset=utf-8',
            dataType: 'json',
            type: 'POST',
            url: "/NIBBSPortal/Credential",
            data: data,
            success: function (result) {
                alert(result);
                reset();
            },
            error: function () {
                alert("Error!")
            }
        });
    }

    function reset() {
        $("#txtClientId").val('');
        $("#txtClientSecret").val('');
    }

</script>

<div class="col-xl-12 col-md-12 mb-12">
    <div class="card border-left-primary shadow h-100 py-2">
        <div class="card-body">
            <div class="row no-gutters align-items-center">
                <div class="col mr-2">

                    <form class="user">
                        @*<div class="form-group col-md-6">
                            <input type="text" class="form-control form-control-user" id="txtClientId" aria-describedby="emailHelp" placeholder="ClientId">
                        </div>*@
                        <div class="form-group col-md-6">
                            <input type="text" class="form-control form-control-user" id="txtClientSecret" aria-describedby="emailHelp" placeholder="ClientSecret">
                        </div>
                        <div class="form-group col-md-6">
                            <a href="#" onclick="SaveCredentials()" class="btn btn-primary btn-sm">
                                Save
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<br />

